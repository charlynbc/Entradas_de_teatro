{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend (index-v3-postgres.js)",
      "cwd": "${workspaceFolder}/teatro-tickets-backend",
      "program": "${workspaceFolder}/teatro-tickets-backend/index-v3-postgres.js",
      "runtimeArgs": ["--experimental-modules"],
      "envFile": "${workspaceFolder}/teatro-tickets-backend/.env",
      "env": {
        "DATABASE_URL": "postgres://postgres:postgres@localhost:5432/teatro",
        "NODE_ENV": "development"
      },
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Backend (PID from /tmp/backend.pid)",
      "processId": "${command:PickProcess}",
      "skipFiles": ["<node_internals>/**"]
    }
    {
      "type": "node",
      "request": "attach",
      "name": "Attach (9229)",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
