{
  "name": "entradas-teatro",
  "version": "1.0.0",
  "description": "Sistema de venta de entradas para teatro",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "limpiar-db": "node scripts/limpiar-db.js",
    "verificar-db": "node scripts/verificar-db.js",
    "limpiar-funciones-pasadas": "node scripts/limpiar-funciones-pasadas.js",
    "preparar-entrega": "node scripts/limpiar-db.js && node scripts/verificar-db.js",
    "test": "node tests/test-funcionalidades.js",
    "test:verificacion": "node tests/verificacion-completa.js",
    "test:todo": "npm run test:verificacion && npm run test",
    "pre-deploy": "npm run test:verificacion && npm run limpiar-db && npm run verificar-db"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "axios": "^1.6.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "mongoose": "^7.0.0",
    "nodemailer": "^6.9.0",
    "pdfkit": "^0.13.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  }
}
