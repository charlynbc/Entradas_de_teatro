{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmitOnError": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "**/*.d.ts"],
  "exclude": ["node_modules", "dist", "public"]
}
